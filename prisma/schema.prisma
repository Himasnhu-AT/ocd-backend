generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String    @id @default(uuid())
  name           String
  email          String    @unique
  branch         String
  graduationYear String
  photo          String
  role           UserRoles
  socialAccounts Socials   @relation(fields: [socialsId], references: [id])
  userVerified   Boolean
  socialsId      String
}

enum UserRoles {
  ADMIN
  USER
  MEMBER
  TEACHER
}

model Socials {
  id        String @id @default(uuid())
  userId    String
  facebook  String
  instagram String
  linkedin  String
  github    String
  twitter   String
  User      User[]
}
